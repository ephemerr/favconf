"systemctl suspend"
    Mod4 + F11

"pkill python; pkill virtualbox"
   Mod4 + Shift + p

"dmenu_run -fn 'terminus:size=16'"
    Mod4 + Super_L

# Window managment
"wmctrl -c :ACTIVE:"
    Mod1 + F4
"p2right"
    Mod4 + Next
"p2left"
    Mod4 + Prior
"wmctrl -r :ACTIVE: -b toggle,fullscreen"
    Mod4 + Return

"scrot"
    Mod4 + Print

"setxkbmap us"
    Mod4 + 1

"setxkbmap ru,us"
    Mod4 + 2

"setxkbmap il,us"
    Mod4 + 3

