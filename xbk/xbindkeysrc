# Func keys
"systemctl suspend"
    XF86PowerOff
"wireless_switch"
    Shift + F8
"amixer -D pulse sset Master 10%+"
    XF86AudioRaiseVolume
"amixer -D pulse sset Master 10%-"
    XF86AudioLowerVolume
"amixer sset Master toggle"
    XF86AudioMute

